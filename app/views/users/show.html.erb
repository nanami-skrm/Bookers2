<div class="container">

<%= notice %>

<% if @user.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
    	<ul>
        	<% @user.errors.full_messages.each do |message| %>
          		<li><%= message %></li>
        	<% end %>
        </ul>
	</div>
<% end %>

<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
		<table class="table .table">
			<tr>
				<th>Name</th> <td><%= @user.name %></td>
			</tr>
			<tr>
				<th>Introduction</th> <td><%= @user.introduction %></td>
			</tr>
		</table>
		<div class="Edit">
			<%= link_to edit_user_path(current_user.id) do %>
				<button type="button" class="btn btn-default btn-block col-xs-12">
					<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
				</button>
			<% end %>
		</div>

		<h2>New book</h2>
		<%= form_for(@new_book) do |f| %>
			<p>Title</p>
			<div class="title-form">
				<%= f.text_field :title %>
			</div>
			<p>Body</p>
			<div class="body-form">
				<%= f.text_area :body %>
			</div>
			<div class="Create">
				<%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
			</div>
		<% end %>
	</div>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table .table">
			<tr>
				<th>   </th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
			<% @books.each do |book| %>
				<tr>
					<td><%= link_to edit_book_path(book.id) do %> <!--画像からuserのshowに戻りたい-->
						<%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
					<% end %>
						</td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
			<% end %>
		</table>
	</div>
</div>