
<h1>users/show</h1>


<% if @user.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
    	<ul>
        	<% @user.errors.full_messages.each do |message| %>
          		<li><%= message %></li>
        	<% end %>
        </ul>
	</div>
<% end %>

<h2>User info</h2>
<!--ここにプロフィール画像を表示したい-->
<%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
<table>
	<tr>
		<th>Name</th> <td><%= @user.name %></td>
	</tr>
	<tr>
		<th>Introduction</th> <td><%= @user.introduction %></td>
	</tr>
</table>

<div class="Edit btn">
	<%= link_to "Edit Profile", user_path(current_user.id) %>
</div>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<p>Title</p>
	<div class="title-form">
		<%= f.text_field :title %>
	</div>
	<p>Body</p>
	<div class="body-form">
		<%= f.text_area :body %>
	</div>
	<div class="Create btn">
		<%= f.submit 'Create Book' %>
	</div>
<% end %>

<h2>Books</h2>
<table>
	<tr>
		<th>   </th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= link_to edit_book_path(book.id) do %> <!--画像からuserのshowに戻りたい-->
				<%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
			<% end %>
				</td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><span><%= book.body %></span></td>
		</tr>
	<% end %>
</table>