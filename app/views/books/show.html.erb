<h1>book/show</h1>
<%=  notice %>
<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
    	<ul>
        	<% @book.errors.full_messages.each do |message| %>
          		<li><%= message %></li>
        	<% end %>
        </ul>
	</div>
<% end %>


<h2>User info</h2><!--その本を投稿したユーザーの情報-->
<%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
<table>
	<tr>
		<th>Name</th> <td><%= @user.name %></td>
	</tr>
	<tr>
		<th>Introduction</th> <td><%= @user.introduction %></td>
	</tr>
</table>
<div class="Edit btn">
	<%= link_to "Edit Profile", edit_user_path(@user.id) %>
</div>


<h2>New book</h2>
<%= form_for(@new_book) do |f| %>
	<p>Title</p>
	<div class="title-form">
		<%= f.text_field :title %>
	</div>
	<p>Body</p>
	<div class="body-form">
		<%= f.text_area :body %>
	</div>
	<div class="Create btn">
		<%= f.submit 'Create Book' %>
	</div>
<% end %>


<h2>Book detail</h2>
<table>
	<tr>
		<td><%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %><br>
			<%= link_to user_path(@user) do %>
			<%= @user.name %>
			<% end %>
		</td>
		<td><span><%= @book.title %></span></td>
		<td><span><%= @book.body %></span></td>
		<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
		<td><%= link_to "Destroy",book_path(@book.id), method: :delete %></td>
	</tr>
</table>